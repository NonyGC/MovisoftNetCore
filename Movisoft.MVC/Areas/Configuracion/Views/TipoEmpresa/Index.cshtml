
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
}

@section TituloCabecera{
    <h2>Configuración</h2>
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">

                <div class="ibox-title">
                    <h5>Tipo Empresa</h5>
                    <div class="ibox-tools">
                        <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#modal">
                            <i class="fa fa-plus"></i> Nuevo
                        </button>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">

                    <table class="table table-bordered table-sm" id="tblPrincipal" style="width:100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>DESCRIPCIÓN</th>
                                <th>ABREVIATURA</th>
                                <th>ACCIÓN</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<!--Modal-->

<div class="modal inmodal fade" id="modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Tipo Empresa</h4>
            </div>
            <div class="modal-body">

                <div id="contentError"></div>

                <form id="frmModal">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Tempcodi" />

                    <div class="form-group row">
                        <label for="lblDesc" class="col-sm-2 col-form-label">Descripción</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="lblDesc" name="Tempdesc">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="lblAbrev" class="col-sm-2 col-form-label">Abreviatura</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="lblAbrev" name="Tempabrev">
                        </div>
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                <button id="btnGuardar" type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>

<!--Fin Modal-->


@section scripts{
    <script src="~/lib/dataTables/datatables.min.js"></script>
    <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/general.js" asp-append-version="true"></script>
    <script src="~/js/configuracion/tipoempresa.js" asp-append-version="true"></script>
}
