
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
}

@section TituloCabecera{
    <h2>Configuración</h2>
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">

                <div class="ibox-title">
                    <h5>Empresa</h5>
                    <div class="ibox-tools">
                        <a asp-area="Configuracion" asp-controller="Empresa" asp-action="Create" class="btn btn-primary btn-xs"><i class="fa fa-plus"></i> Nuevo</a>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">

                    <table class="table table-bordered table-sm" id="tblPrincipal" style="width:100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>RUC</th>
                                <th>NOMBRE</th>
                                <th>RAZÓN SOCIAL</th>
                                <th>DIRECCIÓN</th>
                                <th>TELÉFONO</th>
                                <th>ACCIÓN</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/lib/dataTables/datatables.min.js"></script>
    <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/general.js" asp-append-version="true"></script>
    <script src="~/js/configuracion/empresa.js" asp-append-version="true"></script>
}


