@model Movisoft.MVC.Areas.Configuracion.Models.VMConfiguracion

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <style>
        .custom-control-label::before, .custom-control-label::after {
            right: 0 !important;
        }

        label span {
            position: absolute !important;
            right: 21px !important;
        }
    </style>

}

@section TituloCabecera{
    <h2>Configuración</h2>
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">

                <div class="ibox-title">
                    <h5>Empresa</h5>
                    <div class="ibox-tools">
                        <a asp-area="Configuracion" asp-controller="Empresa" asp-action="Index" class="btn btn-primary btn-xs"><i class="fa fa-list"></i> Lista</a>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">

                    <form method="post" action="Create/" id="frmCreate">

                        @Html.AntiForgeryToken()

                        <div class="form-group row">
                            <label for="txtRuc" class="col-sm-1 col-form-label">Ruc</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="txtRuc" name="Emprruc">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtNombre" class="col-sm-1 col-form-label">Nombre</label>
                            <div class="col-sm-3">
                                <input type="text" class="form-control" id="txtNombre" name="Emprnomb">
                            </div>
                            <label for="txtRazon" class="col-sm-1 col-form-label">Razón Social</label>
                            <div class="col-sm-3">
                                <input type="text" class="form-control" id="txtRazon" name="Emprrazsocial">
                            </div>
                            <label for="txtAbrev" class="col-sm-1 col-form-label">Abreviatura</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="txtAbrev" name="Emprabrev">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtDireccion" class="col-sm-1 col-form-label">Dirección</label>
                            <div class="col-sm-3">
                                <input type="text" class="form-control" id="txtDireccion" name="Emprdire">
                            </div>
                            <label for="txtTelefono" class="col-sm-1 col-form-label">Teléfono</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="txtTelefono" name="Emprtele">
                            </div>
                            <label for="txtTelefono" class="col-sm-1 offset-sm-1 col-form-label">Dominio</label>
                            <div class="col-sm-2">
                                <input type="text" class="form-control" id="txtTelefono" name="Emprdom">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="cboSein" class="col-sm-1 col-form-label">Sein</label>
                            <div class="col-sm-1">
                                <select class="form-control" id="cboSein" name="Emprsein">
                                    <option></option>
                                    <option value="S">Agente</option>
                                    <option value="N">No agente</option>
                                </select>
                            </div>

                            <label for="cboCoes" class="col-sm-1 col-form-label">Coes</label>
                            <div class="col-sm-1">
                                <select class="form-control" id="cboCoes" name="Emprcoes">
                                    <option></option>
                                    <option value="S">SI</option>
                                    <option value="N">NO</option>
                                </select>
                            </div>

                            <label for="txtOsinergmin" class="col-sm-1 col-form-label">Cod. Osinergmin</label>
                            <div class="col-sm-1">
                                <input type="text" class="form-control" id="txtOsinergmin" name="Emprcodosinergmin">
                            </div>

                            <label for="cboAmbito" class="col-sm-1 col-form-label">Ambito</label>
                            <div class="col-sm-1">
                                <select class="form-control" id="cboAmbito" name="Emprambito">
                                    <option value="Pu">Publico</option>
                                    <option value="Pr">Privado</option>
                                </select>
                            </div>

                            <label for="cboDomiciliada" class="col-sm-1 col-form-label">Domiciliada</label>
                            <div class="col-sm-2">
                                <select class="form-control" id="cboDomiciliada" name="Emprdomiciliada">
                                    <option value="N">Nacional</option>
                                    <option value="E">Extrangero</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="txtRuc" class="col-sm-1 col-form-label">Tipo Empresa</label>
                            <div class="col-sm-10">
                                @foreach (var item in Model.ListaSitipempresa)
                                {
                                    <div class="checkbox">
                                        <label><input name="Sirelempresas" type="checkbox" value="@item.Tempcodi"> @item.Tempdesc</label>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-11">
                                <button class="btn btn-primary pull-right m-l-xs" type="submit">Guardar</button>
                                <button class="btn btn-white pull-right" type="submit">Cancelar</button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

</div>

@section scripts{
    <script src="~/js/general.js" asp-append-version="true"></script>
}
