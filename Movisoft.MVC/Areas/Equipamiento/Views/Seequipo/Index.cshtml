@model List<Movisoft.Aplication.DTO.SeequipoDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Static Tables</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a>Tables</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Static Tables</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>EQUIPAMIENTO</h5>
                    <div class="ibox-tools">
                        <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#btnNuevo">
                            <i class="fa fa-plus"></i> Nuevo
                        </button>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>CÓDIGO</th>
                                <th>NOMBRE</th>
                                <th>ABREVIATURA</th>
                                <th>TOPOLOGÍA</th>
                                <th>TIPO EQUIPO</th>
                                <th>EMPRESA</th>
                                <th>ACCIÓN</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Equicodi</td>
                                    <td>@item.Equinombre</td>
                                    <td>@item.Equiabrev</td>
                                    <td>@item.Setopologia.Topnombre</td>
                                    <td>@item.Setipequipo.Tequinomb</td>
                                    <td>@item.Siempresa.Emprnomb</td>
                                    <td></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal inmodal fade" id="btnNuevo" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Equipo</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group row">
                        <label for="cboTopologia" class="col-sm-2 col-form-label">Topologia</label>
                        <div class="col-sm-4">
                            <select class="form-control" id="cboTopologia"></select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="cboTipoequipo" class="col-sm-2 col-form-label">Tipo Equipo</label>
                        <div class="col-sm-4">
                            <select class="form-control" id="cboTipoequipo"></select>
                        </div>
                        <label for="cboEmpresa" class="col-sm-2 col-form-label">Empresa</label>
                        <div class="col-sm-4">
                            <select class="form-control" id="cboEmpresa"></select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="lblNombre" class="col-sm-2 col-form-label">Nombre</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="lblNombre">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="lblAbrev" class="col-sm-2 col-form-label">Abreviatura</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="lblAbrev">
                        </div>
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                <button id="btnGuardar" type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/js/equipamiento/equipo.js" asp-append-version="true"></script>
}