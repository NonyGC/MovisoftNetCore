@model Movisoft.MVC.Areas.Equipamiento.Models.VMEquipamiento
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
        <link rel="stylesheet" href="~/lib/toastr/toastr.min.css" />
        <link rel="stylesheet" href="~/lib/dataTables/datatables.min.css" />
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">

                <div class="ibox-title">
                    <h5>EQUIPO</h5>
                    <div class="ibox-tools">
                        <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#modalEquipo">
                            <i class="fa fa-plus"></i> Nuevo
                        </button>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">

                    <div class="form-group">
                        <label for="cboEstado" class="col-sm-1 col-form-label">Estado :</label>
                        <div class="col-sm-2">
                            <select id="cboEstado" class="form-control">
                                <option value="A">Activo</option>
                                <option value="I">Inactivo</option>
                            </select>
                        </div>
                    </div>

                    <table class="table table-bordered table-sm" id="tblEquipo" style="width:100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>NOMBRE</th>
                                <th>ABREVIATURA</th>
                                <th>TOPOLOGÍA</th>
                                <th>TIPO EQUIPO</th>
                                <th>EMPRESA</th>
                                <th>ACCIÓN</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal inmodal fade" id="modalEquipo" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Equipo</h4>
            </div>
            <div class="modal-body">
                <div id="contentError"></div>
                <form id="frmEquipo">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Equicodi"/>
                    <div class="form-group row">
                        <label for="cboTopologia" class="col-sm-2 col-form-label">Topologia</label>
                        <div class="col-sm-4">
                            <select class="form-control" id="cboTopologia" name="Topcodi">
                                <option disabled selected>[Selecionar]</option>
                                @foreach (var item in Model.ListSelectItems[0])
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="cboTipoequipo" class="col-sm-2 col-form-label">Tipo Equipo</label>
                        <div class="col-sm-4">
                            <select class="form-control" id="cboTipoequipo" name="Tequicodi">
                                <option disabled selected>[Selecionar]</option>
                                @foreach (var item in Model.ListSelectItems[1])
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                        <label for="cboEmpresa" class="col-sm-2 col-form-label">Empresa</label>
                        <div class="col-sm-4">
                            <select class="form-control" id="cboEmpresa" name="Emprcodi">
                                <option disabled selected>[Selecionar]</option>
                                @foreach (var item in Model.ListSelectItems[2])
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="lblNombre" class="col-sm-2 col-form-label">Nombre</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="lblNombre" name="Equinombre">
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="lblAbrev" class="col-sm-2 col-form-label">Abreviatura</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control" id="lblAbrev" name="Equiabrev">
                        </div>
                    </div>

                </form>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Cerrar</button>
                <button id="btnGuardar" type="button" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/lib/dataTables/datatables.min.js"></script>
    <script src="~/lib/dataTables/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/general.js" asp-append-version="true"></script>
    <script src="~/js/equipamiento/equipo.js" asp-append-version="true"></script>
}